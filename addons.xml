<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="plugin.video.xAmAx-Mod"
		   name="xAmAx-Mod"
		   version="2.4.22" 
		   provider-name="xAmAx">
	  <requires>
	  	<import addon="xbmc.python" version="2.14.0"/>
	  </requires>
	  <extension point="xbmc.python.pluginsource" library="default.py">
	  	<provides>video</provides>
	  </extension>
	  <extension point="xbmc.addon.metadata">
		<summary lang="fr">xAmAx-Mod</summary>
		<description lang="fr">xAmAx-Mod est un module de modification ou de visualisation de plusieurs éléments de Kodi et de ces extensions!</description>
		<summary lang="en">xAmAx-Mod</summary>
		<description lang="en">xAmAx-Mod is a modification module and viewing multiple elements of Kodi and these extensions</description>
		<platform>all</platform>
	  </extension>
	</addon>

    <addon id="repository.xAmAx" name="xAmAx Repository" version="0.2.0" provider-name="xAmAx">
		<requires>
		    <import addon="xbmc.addon" version="12.0.0"/>
		</requires>
		<extension point="xbmc.addon.repository" name="xAmAx Repository">
		    <info compressed="false">https://raw.githubusercontent.com/xAmAx12/xAmAx_Repo/master/addons.xml</info>
		    <checksum>https://raw.githubusercontent.com/xAmAx12/xAmAx_Repo/master/addons.xml.md5</checksum>
		    <datadir zip="true">https://raw.githubusercontent.com/xAmAx12/xAmAx_Repo/master/repo</datadir>
		    <hashes>false</hashes>
		</extension>
		<extension point="xbmc.addon.metadata">
		    <summary>xAmAx Repository</summary>
		    <description>Installer xAmAx-Mod. [CR]  -Pour Reorganiser vStream.[CR]  -Utiliser des options de kodi.[CR]  -Regager la TV si F4m est installer.</description>
		    <platform>all</platform>
		</extension>
	</addon>
</addons>
